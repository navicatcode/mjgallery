<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llAllTwo"
            android:layout_width="363dp"
            android:layout_height="556dp"
            android:layout_gravity="center"
            android:background="@drawable/billing_instructions_bg_img"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="121dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="5dp"
                    android:text="@string/billing_instructions"
                    android:textColor="@color/color_2D2D2D"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="363dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/monthly_statement"
                            android:textColor="@color/color_747474"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="363dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:text="@string/title_one_06"
                                android:textColor="@color/color_747474"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="363dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="7dp"
                                android:gravity="center_horizontal"
                                android:text="@string/daily_pattern"
                                android:textColor="@color/color_747474"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="13dp"
                                android:text="@string/title_one_03"
                                android:textColor="@color/color_747474"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="375dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="7dp"
                                android:gravity="center_horizontal"
                                android:text="@string/pay_special_attention"
                                android:textColor="@color/color_747474"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="12dp"
                                android:gravity="center_horizontal"
                                android:text="@string/title_one_04"
                                android:textColor="@color/color_747474"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="17dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="30dp"
                                android:gravity="center_horizontal"
                                android:text="@string/title_one_07"
                                android:textColor="@color/color_747474"
                                android:textSize="15sp" />
                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/suxian_img" />

        <ImageView
            android:id="@+id/ivBillingInstructionsClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/billing_instructions_close_img" />
    </LinearLayout>


</LinearLayout>
