<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAllOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="218dp"
        android:background="@color/color_33000000">

        <LinearLayout
            android:id="@+id/llAllYearDialog"
            android:layout_width="206dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog_years_bg"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingTop="4dp"
            android:paddingRight="3dp"
            android:paddingBottom="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecyclerViewYear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="91"
                android:background="@drawable/shape_oaaffa_bg" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecyclerViewQiShu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="112"
                android:background="@drawable/shape_ffffff_bg" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>