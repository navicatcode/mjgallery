<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <include layout="@layout/include_activity_top" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/mine_top_bg_img"


                android:orientation="vertical"
                android:layout_height="212dp">

                <TextView
                    android:id="@+id/tvSignInMonth"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSignInToDay"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="33dp">


                    <ProgressBar
                        android:id="@+id/mSignInRewardProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:progressDrawable="@drawable/sign_in_rewardprogressbar" />

                    <com.mjgallery.mjgallery.widget.UIImageView
                        android:id="@+id/ivSignInRewardToDay3"
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/receive_no" />

                    <com.mjgallery.mjgallery.widget.UIImageView
                        android:id="@+id/ivSignInRewardToDay10"
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="96dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/receive_no" />

                    <com.mjgallery.mjgallery.widget.UIImageView
                        android:id="@+id/ivSignInRewardToDay20"
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="189dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/receive_no" />

                    <com.mjgallery.mjgallery.widget.UIImageView
                        android:id="@+id/ivSignInRewardToDayTotal"
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/receive_no" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="33dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="@string/to_3day"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="127dp"
                        android:text="@string/to_10day"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="222dp"
                        android:text="@string/to_20day"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvToDayTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="33dp">

                    <Button
                        android:id="@+id/btn3ToDayYes"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:visibility="gone"
                        android:background="@drawable/sign_in_reward_select"
                        android:text="@string/receive_prize"
                        android:textColor="@color/color_0EB4FE"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn3ToDayNo"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/sign_in_reward_no"
                        android:text="@string/to_receive"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/btn10ToDayYes"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="118dp"
                        android:visibility="gone"
                        android:background="@drawable/sign_in_reward_select"
                        android:text="@string/receive_prize"
                        android:textColor="@color/color_0EB4FE"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn10DayNo"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="118dp"
                        android:background="@drawable/sign_in_reward_no"
                        android:text="@string/to_receive"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/btn20ToDayYes"
                        android:layout_width="49dp"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="210dp"
                        android:background="@drawable/sign_in_reward_select"
                        android:text="@string/receive_prize"
                        android:textColor="@color/color_0EB4FE"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn20ToDayNo"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="210dp"
                        android:background="@drawable/sign_in_reward_no"
                        android:text="@string/to_receive"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/btnTotalToDayYes"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:background="@drawable/sign_in_reward_select"
                        android:text="@string/receive_prize"
                        android:textColor="@color/color_0EB4FE"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnTotalToDayNo"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/sign_in_reward_no"
                        android:text="@string/to_receive"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="-43dp"
                android:layout_marginRight="11dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/calendar_top_bg" />
                <TextView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="8dp"/>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.7dp"
                    android:layout_marginTop="-7dp"
                    android:layout_marginRight="0.7dp"
                    app:hl_cornerRadius="10dp"
                    app:hl_dx="0dp"
                    app:hl_dy="1dp"
                    app:hl_shadowColor="#55ff00d5"
                    app:hl_shadowLimit="3dp"
                    app:hl_topShow="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/rlSignInRewar"
                        android:layout_height="26dp"
                        android:layout_marginTop="8dp">

                        <com.mjgallery.mjgallery.widget.UIImageView
                            android:id="@+id/ivSignInRewardLeft"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/sign_in_reward_left" />

                        <TextView
                            android:id="@+id/tvSignInRewardYears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/color_0EB4FE"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.mjgallery.mjgallery.widget.UIImageView
                            android:id="@+id/ivSignInRewardRight"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/sign_in_reward_right" />
                    </RelativeLayout>

                    <com.haibin.calendarview.CalendarLayout
                        android:id="@+id/calendarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="25dp"
                        android:orientation="vertical">

                        <com.haibin.calendarview.CalendarView
                            android:id="@+id/calendarView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:current_day_text_color="@drawable/btn_22_no"
                            app:current_month_lunar_text_color="#CFCFCF"
                            app:current_month_text_color="@color/black"
                            app:min_year="2004"
                            app:month_view="com.mjgallery.mjgallery.widget.calendar.SignInRewardMonthView"
                            app:month_view_show_mode="mode_only_current"
                            app:other_month_text_color="@color/black"
                            app:scheme_text_color="#000000"
                            app:select_mode="single_mode"
                            app:selected_text_color="#333333"
                            app:selected_theme_color="@drawable/dang_qian_ri_qi_touming"
                            app:week_background="#fff"
                            app:week_bar_height="21dp"
                            app:week_bar_view="com.mjgallery.mjgallery.widget.calendar.CustomWeekBar"
                            app:week_text_color="#111"
                            app:week_view="com.mjgallery.mjgallery.widget.calendar.SimpleWeekView"
                            app:year_view_day_text_color="#333333"
                            app:year_view_day_text_size="16sp"
                            app:year_view_month_text_color="#000"
                            app:year_view_month_text_size="16sp"
                            app:year_view_scheme_color="#f17706" />
                    </com.haibin.calendarview.CalendarLayout>
                </com.lihang.ShadowLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnRewards"
                        android:layout_width="156dp"
                        android:layout_height="44dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sign_in_rewards_btn_select"
                        android:text="@string/rewards"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnRewardsNo"
                        android:layout_width="156dp"
                        android:visibility="gone"
                        android:layout_height="44dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sign_in_rewards_btn_no"
                        android:text="@string/rewards_no"
                        android:textColor="@color/color_0EB4FE"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>