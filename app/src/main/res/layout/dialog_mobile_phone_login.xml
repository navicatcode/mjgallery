<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="158dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlAllTwo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="326dp"
            android:layout_marginRight="52dp"
            android:visibility="gone"
            android:background="@drawable/mobile_phone_login_bg2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="18dp"
                android:text="手机登陆"
                android:textColor="@color/color_B8B2B2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="18dp"
                android:text="忘记密码"
                android:textColor="@color/color_B8B2B2"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llBg"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@drawable/mobile_phone_login_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="33dp"
                android:textColor="@color/color_09AFF9"
                android:textSize="24sp"
                android:text="@string/phoneLogin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_f8f8f8_18_gray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="19dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mobile_phone_login_user_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/etChangePasswordPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="82dp"
                        android:background="@null"
                        android:hint="@string/app_change_password_input_phone"
                        android:inputType="phone"
                        android:textColor="@color/color_2e2e2e"
                        android:textColorHint="@color/color_B5B5B5"
                        android:textCursorDrawable="@drawable/dialog_cursor_color"
                        android:textSize="14sp" />


                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp">

                <TextView
                    android:id="@+id/tvChangePasswordPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="47dp"
                    android:text="请输入正确的手机号码！"
                    android:textColor="@color/color_FF7575"
                    android:textSize="9sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_f8f8f8_18_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/change_password_pwd_img2" />

                <EditText
                    android:id="@+id/etChangePasswordOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:hint="@string/app_change_password_input_pwd"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/color_2e2e2e"
                    android:textColorHint="@color/color_B5B5B5"
                    android:textCursorDrawable="@drawable/dialog_cursor_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp">

                <TextView
                    android:id="@+id/tvChangePasswordPwdOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="47dp"
                    android:text="密码至少六位数哦！"
                    android:textColor="@color/color_FF7575"
                    android:textSize="9sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="43dp"
                android:text="忘记密码"
                android:layout_gravity="right"
                android:textColor="@color/color_B8B2B2"
                android:textSize="13sp" />
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/btn_0eb4fe_10_bg"
                android:text="登  录"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
