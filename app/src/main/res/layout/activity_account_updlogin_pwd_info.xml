<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ECECEC"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_top_bg">

        <include layout="@layout/include_activity_top" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingBottom="2dp"
        android:text="@string/account_upd_login_pwd8"
        android:textColor="@color/color_4D4D4D"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:minWidth="60dp"
                android:text="@string/account_upd_login_pwd9"
                android:textColor="@color/color_4D4D4D"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etLoginPwd1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPassword"
                android:maxLines="1"
                android:hint="@string/set_pwd_eror"
                android:textColor="@color/color_2e2e2e"
                android:textCursorDrawable="@drawable/dialog_cursor_color"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivShowStatus1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_pwd"
            android:visibility="gone"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingBottom="2dp"
        android:text="@string/account_upd_login_pwd4"
        android:textColor="@color/color_4D4D4D"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:minWidth="60dp"
                android:text="@string/account_upd_login_pwd2"
                android:textColor="@color/color_4D4D4D"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etLoginPwd2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPassword"
                android:maxLines="1"
                android:hint="@string/set_pwd_eror"
                android:textColor="@color/color_2e2e2e"
                android:textCursorDrawable="@drawable/dialog_cursor_color"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivShowStatus2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_pwd" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlVersionInformation"
        android:background="@color/color_EFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:minWidth="60dp"
                android:text="@string/account_upd_login_pwd3"
                android:textColor="@color/color_4D4D4D"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etLoginPwd3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/color_2e2e2e"
                android:textCursorDrawable="@drawable/dialog_cursor_color"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivShowStatus3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_pwd" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlVersionInformation"
        android:background="@color/color_EFEFEF" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_0eb4fe_8_bg_normal"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>
