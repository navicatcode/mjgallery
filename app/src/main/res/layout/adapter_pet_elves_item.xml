<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    app:hl_cornerRadius="10dp"
    app:hl_shadowBackColor="@color/white"
    app:hl_shadowColor="@color/color_80BEBEBE"
    app:hl_shadowLimit="6dp">

    <ImageView
        android:id="@+id/ivPetElvesBg"
        android:layout_width="9dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/pet_elves_item_new_bg" />

    <ImageView
        android:id="@+id/ivPetElvesOne"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/pet_elves_normal_img" />

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp">

        <com.barnettwong.autofitcolortextview_library.AutoFitColorTextView
            android:id="@+id/tvPetElvesTitleTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            autofit:minTextSize="9sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivPetElvesTwo"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:scaleType="fitXY"
        android:src="@drawable/pet_elves_new_img" />

    <TextView
        android:id="@+id/tvPetElvesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="33dp"
        android:singleLine="true"
        android:text="026期:宠物精灵---【必中特生肖】"
        android:textColor="@color/color_0C0C0C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPetElvesTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="33dp"
        android:text="2019/08/13 10:50"
        android:layout_marginBottom="8dp"
        android:textColor="@color/color_BDBDBD"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rlPetElvesCollection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:paddingLeft="1dp"
        android:paddingRight="7dp">

        <TextView
            android:id="@+id/tvPetElvesViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_999999"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/tvPetElvesViews"
            android:scaleType="fitXY"
            android:src="@drawable/item_yangjing_img" />
    </RelativeLayout>
</com.lihang.ShadowLayout>