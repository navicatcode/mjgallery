<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llWithdrawDeposit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                android:background="@color/trans"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="13"
                    android:background="@color/color_FDFDFF"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_deposit1"
                        android:textColor="@color/color_212C67" />

                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/color_212C67" />

                    <ImageView
                        android:id="@+id/ivHeadImg"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lan_cn_icon" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:text="Pokc McBd"
                        android:textColor="@color/color_212C67" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="86"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="25dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="34dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/deposit_icon1" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="33dp"
                            android:gravity="top"
                            android:paddingTop="15dp"
                            android:text="¥"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/etInputMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="1000.00"
                            android:maxLength="8"
                            android:maxLines="1"
                            android:textColor="@color/color_21335B"
                            android:textColorHint="@color/color_8021335B"
                            android:textCursorDrawable="@drawable/dialog_cursor_color"
                            android:textSize="48sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:background="@color/color_21335B" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMoney1"
                            android:layout_width="65dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/shape_27347d_bg"
                            android:gravity="center"
                            android:text="100"
                            android:textColor="@color/color_27347D"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvMoney2"
                            android:layout_width="65dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/shape_27347d_bg"
                            android:gravity="center"
                            android:text="200"
                            android:textColor="@color/color_27347D"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvMoney3"
                            android:layout_width="65dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/shape_27347d_bg"
                            android:gravity="center"
                            android:text="300"
                            android:textColor="@color/color_27347D"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginBottom="34dp"
                        android:text="@string/withdraw_deposit2"
                        android:textColor="@color/color_212C67"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/deposit_icon2" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="33dp"
                            android:gravity="top"
                            android:paddingTop="15dp"
                            android:text="¥"
                            android:textSize="18sp"
                            android:visibility="invisible"

                            />

                        <EditText
                            android:id="@+id/etTransPwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:inputType="textPassword"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:textColor="@color/color_21335B"
                            android:textCursorDrawable="@drawable/dialog_cursor_color"
                            android:textSize="41sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:background="@color/color_21335B" />

                    <TextView
                        android:id="@+id/tvSure"
                        android:layout_width="318dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="41dp"
                        android:background="@drawable/btn_0eb4fe_8_bg_normal"
                        android:clickable="true"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="@string/complete"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
