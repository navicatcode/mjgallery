<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/ivTopReturn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/activity_return_img" />

        <ImageView
            android:id="@+id/ivHomeSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_seach_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivHomeTop"
            android:layout_width="87dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_top_img" />

        <ImageView
            android:id="@+id/ivHomeShare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_fengxiang" />

    </RelativeLayout>
</RelativeLayout>
