<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/llItemAll"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivStatusImg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mine_user_normal_img"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匣落成困在"
                android:layout_toRightOf="@id/ivMyAttentionUserImg"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
                <com.mjgallery.mjgallery.widget.UIImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/ivPersonalDialog"
                    android:src="@drawable/personal_dialog_img"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/ivMyAttentionUserImg"
                android:textColor="@color/color_B8B8B8"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <RelativeLayout
                android:id="@+id/rlCancelAttention"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:background="@drawable/item_oaaffa_bg"
                android:clickable="true">
                <requestFocus />
                <TextView
                    android:id="@+id/rlCancelAttentionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/personal_immediately_receive"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/color_E3E3E3"
        />
</LinearLayout>
