<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-40%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <size
                    android:width="100dp"
                    android:height="100dp"/>
                <solid android:color="@color/white"/>
            </shape>
        </rotate>
    </item>
</layer-list>